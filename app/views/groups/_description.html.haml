.selector-panel
  #description-placeholder
    - if group.description.blank? && ( can? :edit, group )
      .empty-placeholder
        = link_to "Add a group description", "#", id: 'add-description'
  #group-description.clearfix
    - if !group.description.blank?
      .group-description.word-break= @group.description
      .dropdown
        = link_to image_tag("dropdown.png", title:'description settings', alt:'description settings'), "#", class: "dropdown-toggle", 'data-toggle' => 'dropdown'
        %ul.dropdown-menu.pull-right
          = link_to "edit", "#", id: 'edit-description'
  #add-group-description
    %h1 Add a group description
    = form_for group do |f|
      = f.hidden_field :id
      .control-group
        = f.text_field :description, id: 'description-input', class: 'inputError limit-250';
      .character-counter
      #save-buttons
        = f.submit "Save", class: 'btn btn-small run-validations', id: 'add-description-submit'
        = link_to "Cancel", "#", id: 'cancel-add-description'
