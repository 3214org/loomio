.group-title.clearfix
  %h2= @group.fancy_link
  .dropdown
    - can_edit = can? :edit, @group
    - can_leave = @group.users_include? current_user
    - if can_edit || can_leave
      = link_to image_tag("settings.png", title:'settings', alt:'settings'), "#", class: "dropdown-toggle", 'data-toggle' => 'dropdown'
      %ul.dropdown-menu.pull-right
        - if can_edit
          %li= link_to "Edit group", edit_group_path(@group)
        - if can_leave
          - membership = current_user.group_membership(@group)
          - if can_edit
            %li= link_to "Leave group", membership, method: :delete, confirm: "Are you sure you wish to leave #{@group.name}?"
.row
  %section.span4
    - if can? :edit, @group || @group.description
      =render 'description', group: @group
    - if display_subgroups_block?(@group)
      =render 'subgroups', subgroups: @subgroups, group: @group

    =render 'users', group: @group

  %section.span8
    - if current_user.motions?(@group)
      .selector-panel
        %h1 Proposals
        %ul
          - current_user.motions_awaiting_dicission(@group).each do |motion|
            %li.undecided= render '/motions/motion_preview', motion: motion
          - current_user.motions_dicided(@group).each do |motion|
            %li= render '/motions/motion_preview', motion: motion
    .selector-panel
      %h1 Discussions
      - if current_user && @group.users_include?(current_user)
        = link_to 'Start a new discussion +', new_discussion_path(discussion: { group_id: @group }),
          class: "btn btn-small", id: "new-discussion"
      %ul
        - group_discussions = @group.all_discussions(current_user)
        - if group_discussions.count > 0
          - group_discussions.each do |discussion|
            %li= render '/discussions/discussion_preview', discussion: discussion, this_group: @group
        - else
          %li.no-discussions= "There are no discussions for this group"
