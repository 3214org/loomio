.navbar-wrapper
  %header.navbar{:data => {:dropdown =>'dropdown'}}
    %h1
      = link_to image_tag("top-bar-loomio.png", :alt => "Loomio"), "/"
    - if user_signed_in?
      %ul.nav
        %li.dropdown#my-groups-container
          %a{href: "#",  class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            #group-icon
            -#- total_activity = current_user.activity_total
            -#- if total_activity > 1
              -##activity-count.span.label.label-important
                -#= total_activity
            #my-groups-title
              = "My groups"
              %b.caret
          %ul.dropdown-menu
            - current_user.all_root_groups.each do |group|
              %li.group-item
                .link-container
                  = link_to group.name, group
              %li.divider
                -#- activity =  current_user.activity_total_in(group)
                -#- if activity > 0
                  -#.notification-container
                    -#.span.label.label-important= activity
            %li.new-group
              =link_to "+ Add New Group", new_group_path
        %li.dropdown#notifications-container
          - notifications_hash = { :href => notifications_path,
            :id => 'notifications-toggle', 'data-target' => '#', 'data-toggle' => 'dropdown' }
          %a{ notifications_hash }
            %span#notifications-count= pluralize(unviewed_notifications.size, "Notification")
            %b.caret
          %ul.dropdown-menu
            %h3 Notifications
            %li.divider
            #notification-items
              - notifications.each do |notification|
                = render notification
                %li.divider
            #notifications-see-more= link_to "See more notifications", notifications_path

      %ul.nav.secondary-nav.pull-right
        %li.feedback= "<a href='mailto:contact@loom.io' target='_blank'>Give us feedback!</a>".html_safe
        %li.dropdown
          %a{href: "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Settings", user_settings_path
            %li.divider
            %li= link_to('Sign out', destroy_user_session_path, method: :delete)
    - else
      .sign-in= link_to('Sign in', new_user_session_path)
