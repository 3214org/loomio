.navbar-wrapper
  %header.navbar{:data => {:dropdown =>'dropdown'}}
    %h1
      = link_to image_tag("top-bar-loomio.png", :alt => "Loomio"), "/"
    - if user_signed_in?
      %ul.nav
        %li.dropdown#group-container
          %a{href: "#",  class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            -##group-icon
            -#- total_activity = current_user.activity_total
            -#- if total_activity > 1
              -##activity-count.span.label.label-important
                -#= total_activity
            #my-groups-title
              = "My groups"
              %b.caret
          %ul.dropdown-menu
            - current_user.all_root_groups.each do |group|
              %li.group-item
                .link-container
                  = link_to group.name, group
              %li.divider
                -#- activity =  current_user.activity_total_in(group)
                -#- if activity > 0
                  -#.notification-container
                    -#.span.label.label-important= activity
            %li.new-group
              =link_to "+ Add New Group", new_group_path
        %li.dropdown
          %a{ :href => "#", :class => "drowndown-toggle", "data-toggle" => "dropdown" }
            %span#notification-count= pluralize(notifications.size, "Notification")
            %b.caret
          %ul.dropdown-menu
            - notifications.each do |notification|
              - author_name = notification.discussion.author.name
              - group_name = notification.discussion.group.name
              %li= link_to "#{author_name} created a new discussion in #{group_name}.", discussion_path(notification.discussion)
      %ul.nav.secondary-nav.pull-right
        %li.feedback= "<a href='mailto:contact@loom.io' target='_blank'>Give us feedback!</a>".html_safe
        %li.dropdown
          %a{href: "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Settings", user_settings_path
            %li.divider
            %li= link_to('Sign out', destroy_user_session_path, method: :delete)
    - else
      .sign-in= link_to('Sign in', new_user_session_path)
