.navbar-wrapper
  - if user_signed_in?
    %header.navbar{:data => {:dropdown =>'dropdown'}}
      %h1
        = link_to image_tag("top-bar-loomio.png", :alt => "Loomio"), "/"
      %ul.nav.group-nav
        %li.dropdown.group-container
          %a{href: "#",  class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            #group-icon
              - total_activity = total_activity_count(current_user)
              - if total_activity > 1
                #activity-count.span.label.label-important
                  = total_activity
            #title= "My groups"
            %b.caret
          %ul.dropdown-menu
            - if current_user
              - current_user.root_groups.each do |group|
                - unless group == current_user.root_groups.first
                  %li.divider
                %li.group-item
                  .link-container
                    = link_to group.name, group
                  - activity =  group.total_activity(current_user)
                  - if activity > 0
                    .notification-container
                      .span.label.label-important= group.total_activity(current_user)
      %ul.nav.secondary-nav.pull-right
        %li.feedback= "<a href='mailto:contact@loom.io' target='_blank'>Give us feedback!</a>".html_safe
        %li.dropdown
          %a{href: "#", class: 'dropdown-toggle', 'data-toggle' => 'dropdown'}
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Settings", user_settings_path
            %li.divider
            %li= link_to('Sign out', destroy_user_session_path, method: :delete)
  - else
    = link_to('Sign in', new_user_session_path)
