#dashboard-home
  - if @groups.present?
    .row
      %section.span4
        .sub-panel
          %h3 Groups
          .dropdown
            = link_to image_tag("dropdown.png", title:'group settings', alt:'group settings'), "#", class: "dropdown-toggle", 'data-toggle' => 'dropdown'
            %ul.dropdown-menu.pull-right
              %li= link_to "Create a group +", new_group_path
          %ul
            - current_user.root_groups.order('name').each do |group|
              %li= link_to group.name, group_path(group)
              - if group.subgroups.size > 0
                - group.subgroups.each do |sub_group|
                  %li.sub-group= link_to sub_group.name, group_path(group)
      %section.span8
        - if current_user.motions_all_groups?
          .selector-panel
            .clearfix
              %h1 Proposals
            %ul
              - current_user.motions_awaiting_dicission_all_groups.each do |motion|
                %li.undecided= render '/motions/motion_preview', motion: motion
              - current_user.motions_dicided_all_groups.each do |motion|
                %li= render '/motions/motion_preview', motion: motion
        .selector-panel
          .clearfix
            %h1 Discussions
          %ul
            - current_user.discussions_sorted.each do |discussion|
              %li= render '/discussions/discussion_preview', discussion: discussion, this_group: nil
  - else
    = link_to 'Create a group', new_group_path
    or wait until you are invited to one.
