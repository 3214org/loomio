- if current_user && (not current_user.has_read_dashboard_notice?)
  - message = "Welcome to Loomio! This page is the Dashboard, where you can see a list of proposals and discussions "
  - message += "that you can participate in. On the right-hand side is a list of all the groups you are a member of.\n\n"
  - message += "Clicking on the Loomio logo in the toolbar above brings you back to this page.\n\n"
  - message += "If you have any questions or feedback weâ€™d love to hear from you: "
  - message += "#{link_to "contact@loom.io", 'mailto:contact@loom.io', :target =>'_blank'}\n\n"
  =render '/application/helper_info', message: message, path: dismiss_dashboard_notice_for_user_path

#dashboard-home
  - if @groups.present?
    .process-flow= link_to image_tag("process-flow.png", title:'start a loomio', alt:'start a loomio'), "#",  "data-toggle" => "modal"
    .row
      %section.span8#dashboard-main-section
        .group-title.clearfix
          %h1 Dashboard - all your groups
        .selector-panel
          .clearfix
            %h2.panel-header Loomios
          %ul.selector-list
            - current_motions_exist = false
            - @discussions_with_current_motion_not_voted_on.each do |discussion|
              %li.selector-item= render '/discussions/discussion_preview', discussion: discussion, this_group: nil
              - current_motions_exist = true
            - @discussions_with_current_motion_voted_on.each do |discussion|
              %li.selector-item= render '/discussions/discussion_preview', discussion: discussion, this_group: nil
              - current_motions_exist = true
            - unless current_motions_exist
              %li.selector-item.no-proposals= "There are no loomios with current decisions "
        .selector-panel
          .clearfix
            %h2.panel-header Latest loomios
          #user-discussions.hidden Loading...
    = render '/discussions/new_loomio'
  - else
    = link_to 'Create a group', new_group_path
    or wait until you are invited to one.
