.poll-brainstorm-votes-panel
  .poll-brainstorm-votes-panel__header
    %h3.lmo-card-subheading{translate: "poll_brainstorm_votes_panel.ideas"}
    %md-select.md-no-underline{ng-model: "fix.votesOrder", ng-change: "changeOrder()", aria-label: "{{ 'poll_common_votes_panel.change_results_order' | translate }}"}
      %md-option{ng-repeat: "opt in sortOptions", ng-value: "opt", translate: "poll_common_votes_panel.{{opt}}"}
  .poll-brainstorm-votes-panel__no-votes{ng-if: "!hasSomeVotes()", translate: "poll_brainstorm_votes_panel.no_votes_yet"}
  .poll-brainstorm-votes-panel__has-votes{ng-if: "hasSomeVotes()"}
    .poll-brainstorm-votes-panel__stance{ng-repeat: "stanceChoice in stanceChoices() track by stance.id"}
      %user_avatar.lmo-flex__no-shrink{user: "stanceChoice.stance().participant()", size: "small"}
      .poll-brainstorm-votes-panel__stance-content
        .poll-brainstorm-votes-panel__stance-name-and-option
          %strong> {{stance.participant().name}}
          %span> {{stance.pollOption().name}}
    %md-button{ng-if: "moreToLoad()", translate: "common.action.load_more", ng-click: "loader.loadMore()"}
  %poll_common_did_not_votes_panel{poll: "poll"}
