.add-facebook-community-form
  %h3{translate: "add_facebook_community_form.currently_signed_in_as"}
  .add-community-form__header.lmo-flex
    %img.add-community-form__logo{ng-src: "{{community.identity().logo}}"}>
    .add-community-form__name> {{ community.identity().name }}
    %a{href: "#", ng-click: "fetchAccessToken()"}
      %span{translate: "add_facebook_community_form.another_account"}

  .poll-common-helptext{translate: "add_facebook_community_form.helptext"}

  %md-input-container.lmo-search-container{md-no-float: "true"}
    %i.material-icons search
    %input{ng-model: "facebook.fragment", placeholder: "{{add_facebook_community_form.fragment_placeholder}}", ng-model-options: "{debounce: 250}"}

  .add-community-form__options
    %loading{ng-if: "fetchFacebookGroupsExecuting"}
    %md-radio-group{ng-if: "!fetchFacebookGroupsExecuting", ng-model: "community.customFields.facebook_group_id"}
      %md-radio-button.add-community-form__radio-button{ng-repeat: "group in facebookGroups()", ng-value: "group.id", aria-label: "{{group.name}}"}
        {{ group.name }}

  .poll-common__actions.lmo-flex
    %md-button{ng-click: "back()"}
      %span{translate: "common.action.back"}
    %md-button.md-raised.md-primary{ng-click: "submit()"}
      %span{translate: "common.action.ok"}
