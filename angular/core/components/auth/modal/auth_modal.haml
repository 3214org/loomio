      %i.material-icons lock_open
      %h1.lmo-h1{translate: "auth_form.sign_in_to_loomio"}
      %material_modal_header_cancel_button{ng-if: "!preventClose"}
      %div{ng-if: "preventClose"}
  .md-dialog-content
    %auth_form{prevent-close: "preventClose"}
