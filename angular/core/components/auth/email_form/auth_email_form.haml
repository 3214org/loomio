.auth-email-form
  %p.poll-common-helptext{translate: "auth_form.email_helptext"}

  %md-input-container.md-block
    %label{translate: "auth_form.email"}
    %input.lmo-primary-form-input{type: "text", placeholder: "{{auth_form.email_placeholder | translate}}", ng-model: "email"}

  .lmo-actions
    %div{ng-if: "preventClose"}
    %md-button{ng-if: "!preventClose", ng-click: "close()", translate: "common.action.cancel", aria-label: "{{ 'common.action.cancel' | translate }}"}
    %md-button{ng-click: "save()", translate: "auth_form.sign_in_with_email", aria-label: "{{ 'common.action.next' | translate }}"}
