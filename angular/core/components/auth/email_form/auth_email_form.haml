.auth-email-form
  %p.poll-common-helptext{translate: "auth_form.email_helptext"}

  %md-input-container.md-block.auth-email-form__email
    %label{translate: "auth_form.email"}
    %input.lmo-primary-form-input{type: "text", placeholder: "{{auth_form.email_placeholder | translate}}", ng-model: "email"}

  .lmo-actions
    %div
    %md-button{ng-click: "submit()", translate: "auth_form.sign_in_with_email", aria-label: "{{ 'common.action.next' | translate }}"}
