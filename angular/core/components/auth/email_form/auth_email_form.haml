.auth-email-form
  %p.poll-common-helptext{translate: "auth_form.email_helptext"}

  %md-input-container.md-block.auth-email-form__email
    %label{translate: "auth_form.email"}
    %input.lmo-primary-form-input{type: "text", md-autofocus: "true", placeholder: "{{ 'auth_form.email_placeholder' | translate}}", ng-model: "email"}
    %validation_errors{subject: "user", field: "email"}

  .lmo-actions
    %div
    %md-button.auth-email-form__submit{ng-click: "submit()", translate: "auth_form.sign_in_with_email", aria-label: "{{ 'common.action.next' | translate }}"}
