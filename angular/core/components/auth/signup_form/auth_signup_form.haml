.auth-signup-form
  .auth-signup-form__welcome
    %user_avatar.lmo-helper-avatar.auth-signup-form__avatar{user: "helperBot", size: "large-circular"}
    %h2.lmo-h2{translate: "auth_form.welcome", translate-value-email: "{{user.name || user.email}}"}
    %p.poll-common-helptext
      %span{translate: "auth_form.sign_up_helptext", ng-if: "!pendingIdentity"}>
      %span{translate: "auth_form.oauth_confirm_helptext", ng-if: "pendingIdentity"}>
      %span{translate: "auth_form.thats_not_me"}>
      %a{href: "#", ng-click: "back()", translate: "auth_form.sign_in_as_someone_else"}

    %p.poll-common-helptext{translate: "auth_form.oauth_confirm_helptext", ng-if: "pendingIdentity"}

  %md-input-container.md-block{ng-if: "pendingIdentity"}
    %label{translate: "auth_form.email"}
    %input.lmo-primary-form-input{type: "text", placeholder: "{{auth_form.email_placeholder | translate}}", ng-model: "user.email"}

  %md-input-container.md-block.auth-signup-form__name
    %label{translate: "auth_form.name"}
    %input.lmo-primary-form-input{type: "text", placeholder: "{{auth_form.name_placeholder | translate}}", ng-model: "name"}
  %div{vc-recaptcha: "true", key: "recaptchaKey", ng-if: "recaptchaKey", ng-model: "user.recaptcha"}

  .lmo-actions
    %div
    %md-button.md-primary.md-raised.auth-signup-form__submit{ng-click: "submit()", translate: "auth_form.login_link", aria-label: "{{ 'auth_form.login_link' | translate }}"}
