.add-community-form
  .add-community-form__add{ng-if: "!community.communityType"}
    %h3.lmo-h3{translate: "add_community_form.existing_communities"}
    %md-list.add-community-form__existing
      %md-list-item.add-community-form__community{ng-repeat: "community in previousCommunities() track by community.id"}
        %md-button.lmo-flex.add-community-form__community{layout: "row", ng-click: "addExistingCommunity(community)"}
          %img.add-community-form__community-icon{class: "add-community-form__community-icon--{{community.communityType}}", ng-src: "/img/{{community.communityType}}-icon.svg"}>
          %h4.lmo-h4.add-community-form__h4 {{community.displayName()}}

      .add-community-form__none-existing.poll-common-helptext{ng-if: "!previousCommunities().length", translate: "add_community_form.no_communities"}

    %h3.lmo-h3{translate: "add_community_form.connect_new_community"}
    %md-list.md-block.add-community-form__new
      %md-list-item.add-community-form__slack
        %md-button.lmo-flex.add-community-form__community{layout: "row", ng-click: "addCommunity('slack')"}
          %img.add-community-form__community-icon.add-community-form__community-icon--slack{src: "/img/slack-icon.svg"}
          %h4.lmo-h4.add-community-form__h4{translate: "add_community_form.add_slack"}

      %md-list-item.add-community-form__facebook
        %md-button.lmo-flex.add-community-form__community{layout: "row", ng-click: "addCommunity('facebook')"}
          %img.add-community-form__community-icon.add-community-form__community-icon--facebook{src: "/img/facebook-icon.svg"}
          %h4.lmo-h4.add-community-form__h4{translate: "add_community_form.add_facebook"}
    .poll-common__actions{ng-if: "community"}
      %md-button{ng-click: "backToShareModal()"}
        %span{translate: "common.action.back"}

  %add_facebook_community_form{ng-if: "community.communityType == 'facebook'"}
  %add_slack_community_form{ng-if: "community.communityType == 'slack'"}
